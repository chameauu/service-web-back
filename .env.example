# Database Configuration
# PostgreSQL - Relational data (users, devices, groups)
DATABASE_URL=postgresql://iotflow:iotflowpass@localhost:5432/iotflow

# Cassandra - Time-series telemetry data
CASSANDRA_HOSTS=localhost
CASSANDRA_PORT=9042
CASSANDRA_KEYSPACE=telemetry
CASSANDRA_REPLICATION_FACTOR=1

# Redis - Caching and real-time data
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=iotflowpass
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# MongoDB - Flexible document storage
MONGODB_URI=mongodb://iotflow:iotflowpass@localhost:27017/iotflow?authSource=admin
MONGODB_DATABASE=iotflow


# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/iot_connectivity.log

# Timestamp Configuration
TIMESTAMP_FORMAT=readable
TIMESTAMP_TIMEZONE=UTC

# Simulator Configuration
SIMULATOR_TIMESTAMP_FORMAT=random

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Security
API_KEY_LENGTH=32
SESSION_TIMEOUT=3600
IOTFLOW_ADMIN_TOKEN=test

# CORS Configuration
# Use '*' for development (allows all origins)
# Use comma-separated list for production: 'http://example.com,https://app.example.com'
CORS_ORIGINS=*

# Locust / load testing helpers
LOCUST_API_KEY=
LOCUST_DEVICE_ID=
LOCUST_ADMIN_TOKEN=
LOCUST_USER_ID=test_user
